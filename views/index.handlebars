<h1>burgers!</h1>

<h2>burgers that are not devoured!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}

    <li>
        {{burger_name}}
        <button data-id="{{id}}" data-devoured="false">
            EAT IT
        </button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>burgers that are devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{burger_name}}
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Cat</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Cat Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> devoured!<br>
        <input type="radio" name="devoured" value="0"> ready
    </div>

    <button type="submit">Add Cat</button>
</form>