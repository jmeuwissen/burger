<h1>burgers!</h1>

<h2>burgers that are not devoured!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}

    <li>
        {{burger_name}}
        <button class = "change-eaten" data-id="{{id}}" data-toBeDevoured="true">
            EAT IT
        </button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>burgers that are devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{burger_name}}
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>


    <button id="submit" type="submit">Add Burger</button>
</form>